@model owp_web.Models.WorkItem

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete an issue</title>
</head>
<body>
    <h2 class="mt-3">Delete Work Item @Model.WorkItemId?</h2>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WorkItemType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WorkItemType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastChangedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastChangedOn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="WorkItemId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a role="button" class="btn btn-secondary" asp-action="Index">Back to List</a>
        </form>
    </div>
</body>
</html>
