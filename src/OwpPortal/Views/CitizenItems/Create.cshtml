@model owp_web.Models.WorkItem

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">OWP Citizen Portal</h1>
            <p class="lead">Welcome to the Citizen Portal for the Office of Public Works.  Here you can notify us of issues that you may have with any of the following:</p>
            <p>
                Asphalt maintenance, paving, bridge repair, street sweeping, traffic lights, paint striping, road inspections and storm water management
            </p>
        </div>
    </div>

<h4>Work Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkItemType" class="control-label"></label>
                <select asp-for="WorkItemType" class="form-control"></select>
                <span asp-validation-for="WorkItemType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Address or location of fault</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


