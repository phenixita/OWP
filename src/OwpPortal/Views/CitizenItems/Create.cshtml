@model owp_web.Models.WorkItem

@{
    ViewData["Title"] = "Create";
    ViewData["IsCitizenHome"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Here you can notify us of issues that you may have with any infrastructure maintained by the Office Of Public Works</h5>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-row d-lg-none">
                <span>Type:</span>
            </div>

            <fieldset class="container form-group">
                <div class="row">
                    <legend class="col-form-label col-lg-2 pt-0 d-none d-lg-block">Type:</legend>

                    <div class="col-sm-10">
                        <div class="form-group">
                            <input asp-for="WorkItemType" class="form-check-input" type="radio" value="1" checked />
                            <label asp-for="WorkItemType" class="form-check-label">Problem with the asphalt road surface, such as a pothole or cracking</label>
                        </div>


                        <div class="form-group">
                            <input asp-for="WorkItemType" class="form-check-input" type="radio" value="2" />
                            <label asp-for="WorkItemType" class="form-check-label">Problem with broken paving or unevenness</label>
                        </div>

                        <div class="form-group">
                            <input asp-for="WorkItemType" class="form-check-input" type="radio" value="3" />
                            <label asp-for="WorkItemType" class="form-check-label">Problem with a bridge</label>
                        </div>

                        <div class="form-group">
                            <input asp-for="WorkItemType" class="form-check-input" type="radio" value="4" />
                            <label asp-for="WorkItemType" class="form-check-label">Street cleanliness - requiring sweeping</label>
                        </div>

                        <div class="form-group">
                            <input asp-for="WorkItemType" class="form-check-input" type="radio" value="5" />
                            <label asp-for="WorkItemType" class="form-check-label">A fault with traffic signalling or lighting</label>
                        </div>

                        <div class="form-group">
                            <input asp-for="WorkItemType" class="form-check-input" type="radio" value="6" />
                            <label asp-for="WorkItemType" class="form-check-label">A fault with road markings/line painting</label>
                        </div>

                        <div class="form-group">
                            <input asp-for="WorkItemType" class="form-check-input" type="radio" value="7" />
                            <label asp-for="WorkItemType" class="form-check-label">A fault with road surface water management</label>
                        </div>


                    </div>
                </div>
            </fieldset>

            <div class="form-group">
                <label asp-for="Address" class="control-label">Please specify the address or location of fault:</label>
                <div class="input-group">
                    <input asp-for="Address" class="form-control" autocomplete="off" />
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="button" id="useCurrentLocation" onclick="getCurrentLocation()">Use current</button>
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Please briefly describe the fault:</label>
                <textarea asp-for="Description" class="form-control" autocomplete="off"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


